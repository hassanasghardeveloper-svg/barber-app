generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Appointment {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String?
  service     String
  email       String?
  gender      String?
  barber      String?
  appointmentDate String?  // Check YYYY-MM-DD
  appointmentTime String?  // Check HH:mm
  status      String   @default("Scheduled") // Scheduled, Serving, Done, NoShow
  queueNumber Int?     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id          Int     @id @default(autoincrement())
  openTime    String  @default("09:00")
  closeTime   String  @default("22:00")
  isQueueOpen Boolean @default(true)
  shopName    String  @default("Premium Cuts")
  phone       String  @default("050 123 4567")
}

model Service {
  id        Int      @id @default(autoincrement())
  name      String
  duration  Int      @default(30)
  price     Float    @default(0)
  category  String   @default("Male") // Male, Female, Both
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
