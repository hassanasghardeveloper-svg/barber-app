generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Appointment {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String?
  service     String
  email       String?
  gender      String?
  barber      String?
  status      String   @default("Waiting") // Waiting, Serving, Done, NoShow
  queueNumber Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id          Int     @id @default(autoincrement())
  openTime    String  @default("09:00")
  closeTime   String  @default("22:00")
  isQueueOpen Boolean @default(true)
  shopName    String  @default("Premium Cuts")
  phone       String  @default("050 123 4567")
}
